<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <div class="form-group">
       <% if current_user.following?(@user) %>
           <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
       <% else %>
           <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
       <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <% if user_signed_in? %>
        <div>
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, options_for_select([['User'], ['Book']]) %>
            <%= f.select :seach, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
             <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
             <% end %>
          </td>
          <td>
             <% if @book.user == current_user %>
              <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
             <% end %>
          </td>
          <td class="favorite-btn">
           <%= render 'favorites/favorite-btn', book: @book %>
          <td>
          <td>
            <p>コメント数：<%= @book.book_comments.count %></p>

          </td>
        </tr>
      </table>
      <table class="comment-book">

        <%= render 'book_comments/comment', book: @book %>

      </table>
      <div>
        <%= form_with model: [@book, @newcomment], local: false do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control book_title" %>
          <p><%= f.submit "送信" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>