<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <div class="form-group">
       <% if current_user.following?(@user) %>
           <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
       <% else %>
           <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
    　 <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
             <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
             <% end %>
          </td>
          <td>
             <% if @book.user == current_user %>
              <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
             <% end %>
          </td>
          <td>
            <% if @book.favorited_by?(current_user) %>
               <%= link_to book_favorites_path(@book.id), method: :delete do %>
                 <span style="color:red;">❤︎</span>
               <%= @book.favorites.count %>
                 <% end %>
            <% else %>
               <%= link_to book_favorites_path(@book.id), method: :post do %>
                 <span style="color:blue;">❤︎</span>
                 <%= @book.favorites.count %>
               <% end %>
            <% end %>
          </td>
          <td>
            <p>コメント数：<%= @book.book_comments.count %></p>

          </td>
        </tr>
      </table>
      <table>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
              <td>
              <%= link_to (book_comment.user) do %>
               <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
               <div><%= book_comment.user.name %></div>
              <% end %>
              </td>
              <td>
              <%= book_comment.comment %>
              </td>
              <td>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
              </td>
          </tr>
          <% end %>
      </table>
      <div>
        <%= form_with model: [@book, @newcomment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control book_title" %>
          <p><%= f.submit "送信" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>